package com.platformcommons.Entities;

import com.fasterxml.jackson.annotation.JsonIgnore;

import jakarta.persistence.Entity;
import jakarta.persistence.EnumType;
import jakarta.persistence.Enumerated;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.validation.constraints.NotNull;
import jakarta.validation.constraints.Pattern;
import jakarta.validation.constraints.Size;

import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

@Entity
@Data
@NoArgsConstructor
@AllArgsConstructor
public class Admin {
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long adminId;

    @NotNull(message = "Admin name cannot be null")
    @Size(min = 3, max = 50, message = "Admin name must be between {min} and {max} characters")
    private String adminName;

    @NotNull(message = "Username cannot be null")
    @Size(min = 5, max = 20, message = "Username must be between {min} and {max} characters")
    private String username;

    @NotNull(message = "Password cannot be null")
    private String password;

    @JsonIgnore
    @Enumerated(EnumType.STRING)
    private Role role;
}
